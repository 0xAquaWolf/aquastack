{
  "name": "@svq/api",
  "version": "1.0.50",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run dev:script",
    "dev:script": "bun --watch ./src/index.ts",
    "dev:node": "ts-node-esm --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push:sqlite"
  },
  "dependencies": {
    "@elysiajs/cors": "1.4.0",
    "@libsql/client": "^0.15.15",
    "drizzle-orm": "0.44.5",
    "elysia": "1.4.7"
  },
  "devDependencies": {
    "bun-types": "1.2.22",
    "drizzle-kit": "0.31.4"
  }
}
