{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "CONVEX_DEPLOYMENT",
        "CONVEX_URL",
        "CONVEX_SITE_URL",
        "NEXT_PUBLIC_CONVEX_URL",
        "EXPO_PUBLIC_CONVEX_URL"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "CONVEX_DEPLOYMENT",
        "CONVEX_URL",
        "CONVEX_SITE_URL",
        "NEXT_PUBLIC_CONVEX_URL",
        "EXPO_PUBLIC_CONVEX_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
